@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Your HM Skincare Password?";
}

<div class="container mt-5 forgot-password-container">
    <div class="text-center mb-4">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <p class="lead text-muted">Don't worry, we’ll help you get back to glowing! ✨</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="p-4 bg-white shadow-lg rounded form-style">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope-fill"></i> Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-repeat"></i> Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>

    body {
        background-color: #f0f8ff;
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }


    .forgot-password-container {
        background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }


    .form-style {
        border: 2px solid #80deea;
        border-radius: 15px;
    }

    .form-floating .form-control {
        border-radius: 10px;
        border: 2px solid #80deea;
        background-color: #ffffff;
        font-size: 16px;
        padding: 12px;
    }

    .form-floating .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 188, 212, 0.5);
        border-color: #4dd0e1;
    }

    .btn-primary {
        background-color: #4dd0e1;
        border: none;
        transition: all 0.3s ease;
        font-size: 18px;
    }

    .btn-primary:hover {
        background-color: #00bcd4;
        box-shadow: 0 4px 8px rgba(0, 188, 212, 0.4);
    }

    h1, h2 {
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }

    .text-muted {
        font-size: 16px;
        margin-bottom: 20px;
        color: #576574;
    }

    .text-danger {
        font-size: 14px;
    }

    a {
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #00bcd4;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
