@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Instructions";
}

<div class="container mt-5 confirmation-container">
    <div class="text-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <p class="lead text-muted">Your password reset link is on its way! ✈️</p>
        <p>Please check your email and follow the instructions to reset your password. If you don't see the email, make sure to check your spam folder.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-success text-center" role="alert">
                <i class="bi bi-check-circle"></i> A password reset email has been sent to your inbox. 🌿
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f7faff;
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }

    .confirmation-container {
        background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }

    .text-muted {
        font-size: 16px;
        margin-bottom: 20px;
        color: #576574;
    }

    .alert-success {
        background-color: #e8f5e9;
        border-color: #4caf50;
        color: #388e3c;
        font-size: 18px;
        padding: 15px;
        border-radius: 10px;
    }

    .alert i {
        font-size: 24px;
        margin-right: 10px;
    }

    a {
        text-decoration: none;
        color: #4dd0e1;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #00bcd4;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
