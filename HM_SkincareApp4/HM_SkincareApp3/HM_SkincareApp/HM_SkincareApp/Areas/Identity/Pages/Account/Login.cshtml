@page
@model LoginModel

@{
    ViewData["Title"] = "💙 Welcome Back!";
}

<div class="container mt-5 login-container">
    <div class="text-center">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <p class="lead text-muted">Let’s get back to glowing skin! 🌟</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="account" method="post" class="p-4 bg-white shadow rounded form-style">
                <h2 class="text-center mb-4">Log In to Your Account</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email"><i class="bi bi-envelope-fill"></i> Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password"><i class="bi bi-lock-fill"></i> Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheckbox" />
                    <label class="form-check-label" asp-for="Input.RememberMe" for="rememberMeCheckbox">
                        Remember Me
                    </label>
                </div>
                <div class="d-grid">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Log In
                    </button>
                </div>
                <div class="text-center mt-4">
                    <p>
                        Forgot your password?
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary fw-bold">Reset it here</a>.
                    </p>
                    <p>
                        New to the app?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold">Create an account</a>.
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #e6f7ff;
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }

    .login-container {
        background: linear-gradient(135deg, #cceeff, #f2f9ff);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .form-style {
        border: 2px solid #99d6ff;
        border-radius: 15px;
    }

    .form-floating .form-control {
        border-radius: 10px;
        border: 2px solid #99d6ff;
        background-color: #ffffff;
        font-size: 16px;
        padding: 10px;
    }

    .form-floating .form-control:focus {
        box-shadow: 0 0 5px rgba(51, 153, 255, 0.5);
        border-color: #66b3ff;
    }

    .btn-primary {
        background-color: #66b3ff;
        border: none;
        transition: all 0.3s ease;
        font-size: 18px;
    }

    .btn-primary:hover {
        background-color: #3385cc;
        box-shadow: 0 4px 8px rgba(102, 179, 255, 0.4);
    }

    h1, h2 {
        font-family: 'Poppins', sans-serif;
        color: #2c3e50;
    }

    .text-muted {
        font-size: 16px;
        margin-bottom: 20px;
        color: #576574;
    }

    a {
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a.text-primary:hover {
        color: #3385cc;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
