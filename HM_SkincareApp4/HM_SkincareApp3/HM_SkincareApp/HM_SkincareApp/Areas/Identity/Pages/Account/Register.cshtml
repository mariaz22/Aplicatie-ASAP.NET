@page
@model HM_SkincareApp.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "🌿 Join our Skincare Community!";
}

<div class="container mt-5 register-container">
    <div class="text-center">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <p class="lead text-muted">Start your journey to glowing skin today. ✨</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-4 bg-white shadow rounded form-style">
                <h2 class="text-center mb-4">Sign Up & Glow ✨</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email"><i class="bi bi-envelope-fill"></i> Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password"><i class="bi bi-lock-fill"></i> Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword"><i class="bi bi-lock-fill"></i> Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-person-plus-fill"></i> Create Account
                    </button>
                </div>
                <div class="text-center mt-4">
                    <p>
                        Already have an account?
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold">Log in here</a>.
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f9fbf7;
        font-family: 'Poppins', sans-serif;
        color: #4b6043;
    }

    .register-container {
        background: linear-gradient(135deg, #d4ebd0, #eafbf4);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .form-style {
        border: 2px solid #b4d5b1;
        border-radius: 15px;
    }

    .form-floating .form-control {
        border-radius: 10px;
        border: 2px solid #b4d5b1;
        background-color: #ffffff;
        font-size: 16px;
        padding: 10px;
    }

        .form-floating .form-control:focus {
            box-shadow: 0 0 5px rgba(112, 173, 102, 0.5);
            border-color: #88c594;
        }

    .btn-success {
        background-color: #88c594;
        border: none;
        transition: all 0.3s ease;
        font-size: 18px;
    }

        .btn-success:hover {
            background-color: #6ea575;
            box-shadow: 0 4px 8px rgba(136, 197, 148, 0.4);
        }

    h1, h2 {
        font-family: 'Poppins', sans-serif;
        color: #4b6043;
    }

    .text-muted {
        font-size: 16px;
        margin-bottom: 20px;
        color: #70897a;
    }

    a {
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a.text-success:hover {
            color: #6ea575;
        }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
