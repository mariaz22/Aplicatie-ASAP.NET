@model HM_SkincareApp.Models.ApplicationUser


<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            <p><i class="bi bi-person"> </i> User name: @Model.UserName</p>

            <p><i class="bi bi-envelope"></i> User email: @Model.Email</p>

            <p><i class="bi bi-person"></i> User first name: @Model.FirstName</p>

            <p><i class="bi bi-person"></i> User last name: @Model.LastName</p>

            <p><i class="bi bi-book"></i> User description: @Model.About</p>

            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> User roles:</p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@role</span>
                }
            }



        </div>

        <div class="d-flex flex-row justify-content-between p-3">

            @if (ViewBag.EsteAdmin)

                {
                @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
                {

                    <button class="btn btn-danger" type="submit">Delete user</button>

                }
            }
        </div>
    </div>
</div>